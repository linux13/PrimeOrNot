<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Act1" android:orientation="vertical" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/st1"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30dp"
        />




    <EditText
        android:textAlignment="center"
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/st2"

        android:textColorHint="#42cc18"
        android:textSize="40dp" />

    <Button
        android:drawableLeft="@drawable/decree"
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff2"
        android:hint="TEST"
        android:textColorHint="#2256ff"
        android:textSize="60dp"/>

    <TextView
        android:textStyle="bold"
        android:id="@+id/txt"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#0deaf5" />

</LinearLayout>